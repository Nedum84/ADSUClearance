<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clearanceWrapper"
    android:padding="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:padding="12dp"
        android:background="@drawable/design_border_radius_grey"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/clearanceName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:padding="6dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/clearanceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Cleared"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp" />
            <TextView
                android:id="@+id/clearancePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: â‚¦4500"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginRight="6dp"
                android:layout_marginEnd="6dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/clearanceSn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="6"
        android:gravity="center"
        android:textColor="#FFF"
        android:padding="2dp"
        android:textSize="16sp"
        android:background="@drawable/design_circle_border1"/>
</RelativeLayout>